// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["filterJson"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  owner       String
  currency    String  @default("USD")
  email       String?
  category    String?
  title       String?
  image       Image?  @relation(fields: [imageId], references: [id])
  about       String?
  location    String?
  socialLinks Json?

  imageId  Int?
  products Product[]
  carts    Cart[]
}

model User {
  address   String   @unique
  publicKey String[]

  carts           Cart[]
  shippingDetails Json?
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  images        Image[]
  price         Float
  physical      Boolean
  description   String?
  discountPrice Float?
  totalStocks   Int?
  variants      Json[]
  category      String?
  tags          String[]
  createdAt     DateTime
  updatedAt     DateTime

  Store   Store @relation(fields: [storeId], references: [id])
  storeId Int
}

model Cart {
  id    Int  @id @default(autoincrement())
  items Json

  owner        User   @relation(fields: [ownerAddress], references: [address])
  ownerAddress String

  store     Store  @relation(fields: [storeName], references: [name])
  storeName String

  @@unique([ownerAddress, storeName])
}

// metas
model Image {
  id   Int    @id @default(autoincrement())
  hash String @unique
  key  String
  url  String

  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?

  Store Store[]
}
